<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="TatterFitness.App.Controls.Popups.ContextMenuPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:models="clr-namespace:TatterFitness.App.Models"
    xmlns:popups="clr-namespace:TatterFitness.App.Controls.Popups"
    x:DataType="popups:ContextMenuPopup">

    <Border StrokeShape="Rectangle" Style="{StaticResource PopupWindowBorder}">
        <Border.Resources>
            <ResourceDictionary>
                <Style BasedOn="{StaticResource PopupButton}" TargetType="Button" />
            </ResourceDictionary>
        </Border.Resources>

        <VerticalStackLayout Style="{StaticResource PopupWindow}">
            <Label Style="{StaticResource PopupTitle}" Text="{Binding Title}" />

            <BoxView Style="{StaticResource PopupDivider}" />

            <ScrollView>
                <VerticalStackLayout x:Name="buttonsContainer" Spacing="12" />
            </ScrollView>
        </VerticalStackLayout>
    </Border>
</mct:Popup>