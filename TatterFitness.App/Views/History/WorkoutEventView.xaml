<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="TatterFitness.App.Views.History.WorkoutEventView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TatterFitness.App.Controls.EventCalendar"
    xmlns:views="clr-namespace:TatterFitness.App.Views"
    xmlns:vm="clr-namespace:TatterFitness.App.ViewModels.History.EventCalendar"
    x:DataType="vm:WorkoutEventViewModel"
    x:TypeArguments="vm:WorkoutEventViewModel"
    BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDarkPrimary},
                                      Light={StaticResource WindowBackgroundColorPrimary}}">

    <Shell.TitleView>
        <Label
            Margin="0"
            FontSize="Title"
            HorizontalTextAlignment="Center"
            Text="{Binding Title}" />
    </Shell.TitleView>

    <controls:EventCalendar />
</views:ContentPageBase>