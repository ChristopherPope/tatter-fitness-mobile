<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase x:Class="TatterFitness.App.Views.ErrorView"
                       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:TatterFitness.App.Views"
                       xmlns:vm="clr-namespace:TatterFitness.App.ViewModels"
                       Title="{Binding Title}"
                       x:DataType="vm:ErrorViewModel"
                       x:TypeArguments="vm:ErrorViewModel"
                       BackgroundColor="White">
    <ScrollView Orientation="Vertical">
        <Label Margin="5,5,5,5"
               BackgroundColor="LightGray"
               MinimumHeightRequest="500"
               Text="{Binding ErrorMessage}"
               TextColor="Firebrick" />
    </ScrollView>
</views:ContentPageBase>