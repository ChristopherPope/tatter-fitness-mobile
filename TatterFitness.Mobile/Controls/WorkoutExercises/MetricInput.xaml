<?xml version="1.0" encoding="utf-8" ?>
<sfCore:SfTextInputLayout
    x:Class="TatterFitness.Mobile.Controls.WorkoutExercises.MetricInput"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TatterFitness.Mobile.Controls.WorkoutExercises"
    xmlns:mauiToolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:sfCore="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    x:DataType="controls:MetricInput"
    ContainerBackground="{AppThemeBinding Dark={StaticResource CardBackgroundColorDarkPrimary},
                                          Light={StaticResource CardBackgroundColorPrimary}}"
    ContainerType="Outlined"
    Stroke="{AppThemeBinding Dark={StaticResource CardTextColorDarkPrimary},
                             Light={StaticResource CardTextColorPrimary}}"
    VerticalOptions="Start">

    <Entry
        x:Name="metric"
        HorizontalTextAlignment="End">
    </Entry>

</sfCore:SfTextInputLayout>

