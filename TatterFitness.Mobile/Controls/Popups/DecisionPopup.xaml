<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="TatterFitness.App.Controls.Popups.DecisionPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:popups="clr-namespace:TatterFitness.App.Controls.Popups"
    x:DataType="popups:DecisionPopup">

    <Border StrokeShape="Rectangle" Style="{StaticResource PopupWindowBorder}">
        <VerticalStackLayout Style="{StaticResource PopupWindow}">
            <Label Style="{StaticResource PopupTitle}" Text="{Binding Title}" />

            <BoxView Style="{StaticResource PopupDivider}" />

            <Label Style="{StaticResource PopupPrompt}" Text="{Binding Prompt}" />

            <HorizontalStackLayout Style="{StaticResource PopupButtonGroup}">
                <Button
                    Clicked="NoButtonPressed"
                    Style="{StaticResource PopupButton}"
                    Text="{Binding NoButtonTitle}" />

                <Button
                    Clicked="YesButtonPressed"
                    Style="{StaticResource PopupButton}"
                    Text="{Binding YesButtonTitle}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</mct:Popup>
